<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="urp.arch.simuladorcredito.MainActivity">

    <ImageButton
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:id="@+id/imageButton0"
        android:clickable="true"
        android:onClick="selectCreditType"
        android:tag="credito_generico"
        android:src="@drawable/credit_star"
        android:scaleType="fitCenter"
        android:padding="30dp"
        android:tint="@color/colorAccent"
        android:elevation="5dp"
        android:background="@color/background_material_light"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginLeft="@dimen/home_icon_margin_top"
        android:layout_marginRight="@dimen/home_icon_margin_top"
        android:layout_marginTop="@dimen/home_icon_margin_top" />
    <ImageButton
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:id="@+id/imageButton1"
        android:clickable="false"
        android:tag="credito_hipotecario"
        android:src="@drawable/credit_house"
        android:scaleType="fitCenter"
        android:padding="30dp"
        android:background="@color/background_material_light"
        android:tint="@color/primary_text_disabled_material_light"
        android:elevation="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:tintMode="src_in"
        android:layout_marginLeft="@dimen/home_icon_margin_top"
        android:layout_marginRight="@dimen/home_icon_margin_top"
        android:layout_marginTop="@dimen/home_icon_margin_top"
        android:layout_marginBottom="@dimen/home_icon_margin_top" />
    <ImageButton
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:id="@+id/imageButton2"
        android:clickable="false"
        android:tag="credito_pyme"
        android:src="@drawable/credit_business"
        android:scaleType="fitCenter"
        android:padding="30dp"
        android:background="@color/background_material_light"
        android:tint="@color/primary_text_disabled_material_light"
        android:elevation="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/home_icon_margin_top"
        android:foreground="?android:attr/selectableItemBackground"
        android:tintMode="src_in" />

    <ImageButton
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:id="@+id/imageButton3"
        android:clickable="true"
        android:tag="credito_personal"
        android:onClick="selectCreditType"
        android:src="@drawable/credit_notes"
        android:scaleType="fitCenter"
        android:padding="30dp"
        android:background="@color/background_material_light"
        android:tint="@color/colorAccent"
        android:elevation="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginLeft="@dimen/home_icon_margin_top"
        android:layout_marginRight="@dimen/home_icon_margin_top"
        android:layout_marginTop="@dimen/home_icon_margin_top"
        android:layout_marginBottom="@dimen/home_icon_margin_top" />

    <ImageButton
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:id="@+id/imageButton5"
        android:clickable="false"
        android:src="@drawable/credit_study"
        android:tag="credito_estudios"
        android:scaleType="fitCenter"
        android:padding="30dp"
        android:background="@color/background_material_light"
        android:tint="@color/primary_text_disabled_material_light"
        android:elevation="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/home_icon_margin_top"
        android:foreground="?android:attr/selectableItemBackground"
        android:tintMode="src_in" />

    <ImageButton
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:id="@+id/imageButton4"
        android:clickable="false"
        android:src="@drawable/credit_car"
        android:tag="credito_vehicular"
        android:scaleType="fitCenter"
        android:padding="30dp"
        android:background="@color/background_material_light"
        android:tint="@color/primary_text_disabled_material_light"
        android:elevation="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:tintMode="src_in"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_alignStart="@+id/imageButton3" />

</RelativeLayout>
